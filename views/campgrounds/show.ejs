<% layout("./layouts/boilerplate") %>
    <div class="row">
        <div class="col-6 offset-3"></div>
        <div class="card mb-3">
            <img src="<%= foundCampground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    <%= foundCampground.title %>
                </h5>
                <p class="card-text">
                    <%= foundCampground.description%>
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted" >
                    <%= foundCampground.location %>
                </li>
                <li class="list-group-item">Price: $<%= foundCampground.price %>/night
                </li>
            </ul>
            <div class="card-body">
                <form class="d-inline" action="/campgrounds/<%= foundCampground._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">DELETE</button>
                </form>
                <a class="card-link btn btn-info" href="/campgrounds/<%= foundCampground._id %>/edit">Edit</a>

            </div>
        </div>
    </div>